<% flash.each do |key, value| %>
<% key = "info" if key=="notice" %>
<% key = "danger" if key=="alert" %>
<div class="alert alert-<%= key %> alert-dismissible" role="alert">
  <a href="#" data-dismiss="alert" class="close">Ã—</a>
  <ul>
    <li>
      <%= value %>
    </li>
  </ul>
</div>
<% end %>
